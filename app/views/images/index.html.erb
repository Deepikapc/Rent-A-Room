<h2>Listing Images </h2>
<table>
	<thead>
		<tr>
			<th>
				Image
			</th>
		</tr>
	</thead>	
	<tbody>
		<%= @images.each do |image| %>
			<tr>
				<td><%= image.image %></td>
				<td><%= link_to "show",image_path(image.id) %> </td>
				<td><%= link_to "Edit",edit_image_path(image.id) %></td>
				<td><%= link_to "Destroy",image_path(image.id),method: :delete,data: {confirm: 'Are you sure?'} %> </td>
			</tr>

		<% end %>
	</tbody>
</table>
<%= link_to "AddImage",new_image_path ,:class => "btn btn-primary"%>
