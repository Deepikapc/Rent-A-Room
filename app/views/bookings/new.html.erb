<% if @bookings_error %>
	<p> "Booking is Full" </p>
<% end %>
<%= form_for @book do |f| %>
	<%= f.label :start_date %>
	<%= f.text_field :start_date %><br/>
	<%= f.label :end_date %>
	<%= f.text_field :end_date %><br/>
	<%= f.label :amount %>
	<%= f.text_field :amount %><br/>
	<%= f.label :Room %>
	<%= f.collection_select :room_id,Room.all,:id,:name,prompt:"Select Room"%>
	<%= f.submit %>
<% end %>


<script>
  $(document).ready(function () {
    $("#booking_start_date").datepicker({dateFormat: "yy-mm-dd"});
    $("#booking_end_date").datepicker({dateFormat: "yy-mm-dd"});
    
  });
</script>

